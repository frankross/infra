#!/usr/bin/env puma

directory "<%=@app_location%>/current"
environment 'production'
daemonize
pidfile '<%=@app_location%>/shared/pids/puma.pid'
state_path '<%=@app_location%>/shared/pids/puma.state'
stdout_redirect "<%=@app_location%>/current/log/puma.log"
threads 0, 32
bind 'unix:<%=@app_location%>/shared/sockets/puma.sock'
workers <%=node.cpu.total%>
preload_app!
